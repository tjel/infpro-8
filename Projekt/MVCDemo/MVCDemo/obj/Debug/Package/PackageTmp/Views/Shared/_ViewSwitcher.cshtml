@*@if (Request.Browser.IsMobileDevice && Request.HttpMethod == "GET")
{*@
    <div class="view-switcher ui-bar-a">
        @if (ViewContext.HttpContext.GetOverriddenBrowser().IsMobileDevice)
        {
            @: Widok Mobilny | 
            @Html.ActionLink("Włącz Widok Normalny", "SwitchView", "ViewSwitcher", new {mobile = false, returnUrl = Request.Url.PathAndQuery}, new {rel = "external"})
        }
        else
        {
            @: Widok Normalny | 
            @Html.ActionLink("Włącz Widok Mobilny", "SwitchView", "ViewSwitcher", new {mobile = true, returnUrl = Request.Url.PathAndQuery}, new {rel = "external"})
        }
    </div>
@*}*@
